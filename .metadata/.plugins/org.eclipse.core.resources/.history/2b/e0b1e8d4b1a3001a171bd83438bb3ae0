package playGame;
import java.util.ArrayList;
import Cards.Card;


public class Player {
	int playerNumber;
	ArrayList<Card> playerHand;
	int highCard;
	int speciality;
	double balance;
	
	Player(int i){
		this.playerNumber = i;
	}
	
	public void addHand(ArrayList<Card> incomingCards) {
		this.playerHand = incomingCards;
	}
	
	public String bet(double bidIntoPot) {
		if(this.balance - bidIntoPot > 0) {
			this.balance = this.balance - bidIntoPot;
			return "Okay";
		}
		else if( this.balance - bidIntoPot ==0 ){
			System.out.println("ALL IN");
			this.balance = this.balance - bidIntoPot;
			return "ALL IN";
		}
		
		else {
			return "Retry";
		}
		
		this.balance = this.balance - bidIntoPot;
	}
	
}
